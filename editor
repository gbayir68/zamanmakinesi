<div class="container">
    <h1>ZAMAN EDİTÖRÜ</h1>
    
    <div class="field">
        <label>TARİH SEÇİN (1990-1999)</label>
        <input type="date" id="date-input" min="1990-01-01" max="1999-12-31" onchange="checkDate()">
    </div>

    <div class="field">
        <label>GÜNÜN VERİSİ</label>
        <textarea id="text-input" placeholder="O güne dair bilgileri buraya yazın..."></textarea>
    </div>

    <div class="btn-group">
        <button class="btn-add" onclick="saveData()">LİSTEYE EKLE</button>
        <button class="btn-copy" onclick="copyCode()">KODU KOPYALA</button>
    </div>

    <div id="output-area">
        <span class="status">Şu anki Liste (Kopyalamaya Hazır):</span>
        <pre id="code-preview">const zamanVerisi = {
};</pre>
    </div>
