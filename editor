<script src="data.js"></script> <script>
    let currentData = typeof zamanVerisi !== 'undefined' ? zamanVerisi : {};

    function checkDate() {
        const date = document.getElementById('date-input').value;
        const textInput = document.getElementById('text-input');
        
        if (currentData[date]) {
            textInput.value = currentData[date].replace(" [M]", "").replace(" [AI]", "");
            alert("Bu tarih zaten sistemde kayıtlı. Güncelleyebilirsiniz.");
        } else {
            textInput.value = "";
        }
        updatePreview();
    }

    function saveData() {
        const date = document.getElementById('date-input').value;
        const text = document.getElementById('text-input').value;

        if (!date || !text) {
            alert("Lütfen tarih ve metin girin.");
            return;
        }

        // El ile girildiğini anlamak için sonuna gizli imza [M] (Manual) ekliyoruz
        currentData[date] = text + " [M]";
        updatePreview();
        alert("Eklendi! Kodu kopyalayıp data.js'ye yapıştırabilirsiniz.");
    }

    function updatePreview() {
        let code = "const zamanVerisi = {\n";
        const keys = Object.keys(currentData).sort();
        
        keys.forEach((key, index) => {
            const isLast = index === keys.length - 1;
            code += `    "${key}": "${currentData[key]}"${isLast ? "" : ","}\n`;
        });
        
        code += "};";
        document.getElementById('code-preview').innerText = code;
    }

    function copyCode() {
        const code = document.getElementById('code-preview').innerText;
        navigator.clipboard.writeText(code).then(() => {
            alert("Tüm veri bankası kodu kopyalandı! Şimdi GitHub'daki data.js dosyasına yapıştırabilirsiniz.");
        });
    }

    // Panel sayfasında font rengini ayarlamak için küçük bir düzenleme yapmalısınız.
    updatePreview();
</script>
